<h1>Fancy Shmancy Restaurants in your area</h1>

<div id="restaurants">
  <% @restaurants.each do |restaurant| %>
  <div class="border">
    <%= render restaurant %>
    <p>
      <%= link_to "Show this restaurant", restaurant %>
    </p>
  </div>
  <% end %>
</div>

<%= link_to "New restaurant", new_restaurant_path %>
